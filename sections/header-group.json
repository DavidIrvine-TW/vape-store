{
  "name": "t:sections.header.name",
  "type": "header",
  "sections": {
    "header": {
      "type": "header",
      "custom_css": [
        ".header-wrapper {border-top: 5px solid red;}",
        ".header__menu-item {list-style: none; transition: 0.3s; letter-spacing: 0.2rem;}",
        ".header__menu-item:hover span {text-decoration: none;}",
        "#HeaderMenu-vape-kits:hover,#HeaderMenu-liquids:hover,#HeaderMenu-batteries:hover,#HeaderMenu-tanks:hover,#HeaderMenu-coils:hover,#HeaderMenu-accessories:hover,#HeaderMenu-last-chance:hover {font-weight: bold; transform: translateY(8px);}",
        ".icon-caret {transition: .3s;}"
      ],
      "settings": {
        "logo_position": "middle-left",
        "menu": "main-menu",
        "menu_type_desktop": "dropdown",
        "sticky_header_type": "on-scroll-up",
        "show_line_separator": true,
        "color_scheme": "background-1",
        "menu_color_scheme": "background-1",
        "enable_country_selector": true,
        "enable_language_selector": true,
        "mobile_logo_position": "center",
        "margin_bottom": 0,
        "padding_top": 8,
        "padding_bottom": 8
      }
    }
  },
  "order": [
    "header"
  ]
}
